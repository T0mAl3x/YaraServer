@model YaraServer.Models.ViewModels.CreateCertificateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Generate Certificate</h2>
<br />

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Certificate.ValidDate" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Certificate.ValidDate" class="form-control" />
            </div>
            <span asp-validation-for="Certificate.ValidDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Certificate.ExpiryDate" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Certificate.ExpiryDate" class="form-control" />
            </div>
            <span asp-validation-for="Certificate.ExpiryDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CAPassword" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="CAPassword" class="form-control" />
            </div>
            <span asp-validation-for="CAPassword" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}